@page
@using HEnCasa.App.Dominio
@model HEnCasa.App.Presentacion.Page.ActualizarModel
@{
    ViewData["Title"] = "Formulario actualizar paciente";
}

<div class="text-center">
    <h1>Formulario para actualizar paciente</h1>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="paciente.Id"></label>
        <input asp-for="paciente.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="paciente.Nombre"></label>
        <input asp-for="paciente.Nombre" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Apellidos"></label>
        <input asp-for="paciente.Apellidos" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label>Medico asignado</label>
        <input asp-for="paciente.Medico.Nombre" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Telefono"></label>
        <input asp-for="paciente.Telefono" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Genero"></label>
        <select asp-form="paciente.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="paciente.Direccion"></label>
        <input asp-for="paciente.Direccion" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Longitud"></label>
        <input asp-for="paciente.Longitud" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Latitud"></label>
        <input asp-for="paciente.Latitud" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Ciudad"></label>
        <input asp-for="paciente.Ciudad" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label>Fecha de nacimiento</label>
        <input asp-for="paciente.FechaNacimiento" class="form-control" required="required">
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
